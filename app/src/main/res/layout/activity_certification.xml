<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CertificationActivity">
    <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="61.7dp"/>
        <ImageView
                android:id="@+id/check"
                android:layout_centerInParent="true"
                android:layout_below="@+id/logo"
                android:layout_marginTop="46.2dp"
                android:layout_width="160dp"
                android:layout_height="33.2dp"
                android:src="@mipmap/check"
        />
        <TextView
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/check"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용 약관 \u0026 개인 정보 취급 방침"
                android:textColor="#656565"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_marginTop="21.4dp"
            android:layout_below="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="14sp"
                android:textColor="#8a8a8a"
                android:layout_marginLeft="37dp"
        />
        <EditText
                android:id="@+id/et_certification_act_input_user_name"
                android:layout_marginTop="22dp"
                android:hint="이름 입력"
                android:layout_width="286dp"
                android:layout_height="48dp"
                android:layout_marginLeft="37.5dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일 / 성별구분"
                android:textSize="14sp"
                android:textColor="#8a8a8a"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="12.6dp"
        />
        <EditText
                android:id="@+id/et_certification_act_input_user_birth"
                android:layout_marginTop="22dp"
                android:hint="이름 입력"
                android:layout_width="286dp"
                android:layout_height="48dp"
                android:layout_marginLeft="37.5dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핸드폰 번호"
                android:textSize="14sp"
                android:textColor="#8a8a8a"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="12.6dp"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

            <Spinner
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="21dp"
                    android:id="@+id/sp_certification_act_select_telecom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:prompt="@string/app_name">
            </Spinner>

            <EditText
                    android:id="@+id/et_certification_act_input_user_phone_number"
                    android:hint="010-1234-1234"
                    android:layout_marginLeft="90dp"
                    android:layout_width="286dp"
                    android:layout_height="48dp"
            />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>

