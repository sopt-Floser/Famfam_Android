<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CertificationActivity"
        android:background="#FFFFFF">
    <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_small"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="61.7dp"/>

        <TextView
                android:id="@+id/title"
                android:layout_marginTop="105dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/logo"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족 초대 코드"
                android:textColor="#8a8a8a"
                android:textStyle="bold"/>
        <TextView
                android:layout_marginTop="8dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/title"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코드 번호는 가족들을 초대할 때 필요합니다."
                android:textColor="#656565"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_marginTop="108dp"
            android:layout_below="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
    >

        <LinearLayout
                android:id="@+id/et_code_generattor_act_phone_number_layout"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/certification_act_blue_request_authorization_code"
        >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
            >
                <TextView
                        android:id="@+id/et_code_generator_act_show_code"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="●●●● ●●●● ●●●●"
                        android:textSize="18sp"
                        android:textColor="#656565"
                        android:textStyle="bold"
                        android:letterSpacing="0.2"
                />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/code_generator_act_time_layout"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible"
        >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/layout_2"
                        android:id="@+id/layout_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                    <TextView
                            android:id="@+id/tv_certification_act_seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3:00"
                            android:textColor="#366ce2"
                    />
                    <TextView
                            android:layout_toRightOf="@+id/tv_certification_act_seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 미입력시 재인증해야합니다."
                    />

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#366ce2"
            android:layout_alignParentBottom="true">

        <RelativeLayout
                android:id="@+id/tv_code_generator_act_request_code_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible">
            <TextView
                    android:id="@+id/tv_code_generator_act_request_code_btn_text"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="코드생성"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/tv_code_generator_act_complete_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">
            <TextView
                    android:id="@+id/tv_code_generator_act_complete_btn_text"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="완료"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
            />
        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>

