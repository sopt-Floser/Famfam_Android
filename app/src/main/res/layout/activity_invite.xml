<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.InviteActivity"
        android:background="#366ce2">

    <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="272dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="초대하기"
                        android:textSize="23sp"
                        android:textColor="#ffffff"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/tv_invite_act_name_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="이름"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                />
                <EditText
                        android:layout_marginLeft="48dp"
                        android:layout_toRightOf="@+id/tv_invite_act_name_tag"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/invite_act_gray_box"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/tv_invite_act_relation_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="관계"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                />
                <EditText
                        android:layout_marginLeft="48dp"
                        android:layout_toRightOf="@+id/tv_invite_act_relation_tag"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/invite_act_gray_box"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/tv_invite_act_phone_number_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="전화번호"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                />
                <EditText
                        android:layout_marginLeft="24dp"
                        android:layout_toRightOf="@+id/tv_invite_act_phone_number_tag"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/invite_act_gray_box"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="48dp"
            android:layout_below="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="72dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_marginHorizontal="124dp"
                    android:id="@+id/tv_invite_act_invite_to_kakao_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                <TextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="카카오톡으로 초대"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="124dp"
                    android:id="@+id/tv_invite_act_invite_to_sns_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                <TextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SNS으로 초대"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>