<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity"
        android:background="#366ce2"
>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="262.3dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
    >
        <EditText
                android:id="@+id/et_login_act_id"
                android:layout_width="260dp"
                android:layout_height="44.4dp"
                android:background="@drawable/login_act_grey_text_box"
                android:drawableLeft="@mipmap/ic_launcher"
        />
        <EditText
                android:id="@+id/et_login_act_pw"
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="44.4dp"
                android:background="@drawable/login_act_grey_text_box"
                android:drawableLeft="@mipmap/ic_launcher"
        />
        <Button
                android:id="@+id/btn_login_act_signin"
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="44.4dp"
                android:background="@drawable/login_act_white_signin_box"
                android:text="로그인"
                android:textColor="#366ce2"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

            <RelativeLayout
                    android:id="@+id/tv_login_act_find_pw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="8dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비밀번호 찾기"
                        android:textColor="#ffffff"
                        android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:layout_marginVertical="5dp"/>

            <RelativeLayout
                    android:id="@+id/tv_login_act_signup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회원가입"
                        android:textColor="#ffffff"
                        android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>