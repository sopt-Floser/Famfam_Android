<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/iv_more_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/feed_1"/>
    <ImageView
            android:id="@+id/edit_user_back_photo"
            android:layout_alignParentRight="true"
            android:layout_marginTop="140dp"
            android:layout_marginRight="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle"
            android:src="@drawable/icon_home_carmera"/>

    <LinearLayout
            android:layout_below="@+id/iv_more_bg"
            android:layout_marginTop="-16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
                app:cardCornerRadius="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="32dp">
                <EditText
                        android:layout_marginTop="32dp"
                        android:background="#ffffff"
                        android:id="@+id/tv_more_editprofile_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김팸팸"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:enabled="false"
                />
                <EditText
                        android:id="@+id/tv_more_editprofile_statusmessage"
                        android:background="#ffffff"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/tv_more_editprofile_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:text="안녕하세요 김팸팸 이다"
                />
                <RelativeLayout
                        android:id="@+id/edit_nickname_statusMessage_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/tv_more_editprofile_nickname"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true">
                    <TextView
                            android:layout_centerInParent="true"
                            android:text="편집"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </RelativeLayout>

                <ImageView
                        android:id="@+id/tv_more_editprofile_birth_icon"
                        android:layout_marginTop="56dp"
                        android:layout_below="@+id/tv_more_editprofile_statusmessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_birtday"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_more_editprofile_birth_icon"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/tv_more_editprofile_birth_icon"
                        android:text="생일"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                <RelativeLayout
                        android:id="@+id/tv_more_editprofile_birth_edit"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_more_editprofile_birth_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="수정"
                            android:textSize="16sp"/>
                </RelativeLayout>

                <EditText
                        android:id="@+id/tv_more_editprofile_birth_text"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1995-11-28"
                        android:layout_marginRight="32dp"
                        android:layout_alignTop="@+id/tv_more_editprofile_birth_icon"
                        android:layout_toLeftOf="@+id/tv_more_editprofile_birth_edit"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:enabled="false"
                />


                <ImageView
                        android:id="@+id/tv_more_editprofile_gender_icon"
                        android:layout_marginTop="32dp"
                        android:layout_below="@+id/tv_more_editprofile_birth_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_birtday"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_more_editprofile_gender_icon"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/tv_more_editprofile_gender_icon"
                        android:text="성별"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                <RelativeLayout
                        android:id="@+id/tv_more_editprofile_gender_edit"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_more_editprofile_gender_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    <TextView
                            android:layout_alignParentTop="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수정"
                            android:textSize="16sp"/>
                </RelativeLayout>


                <EditText
                        android:id="@+id/tv_more_editprofile_sexType"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_more_editprofile_gender_icon"
                        android:layout_marginRight="32dp"
                        android:layout_toLeftOf="@+id/tv_more_editprofile_gender_edit"
                        android:text="성별"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:enabled="false"
                />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <ImageView
            android:id="@+id/iv_more_profile_img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_alignBottom="@+id/iv_more_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/kim_fam_big"
            android:translationY="1dp"/>
    <ImageView
            android:id="@+id/edit_user_profile_photo"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/iv_more_profile_img"
            android:layout_alignEnd="@+id/iv_more_profile_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle"
            android:src="@drawable/icon_home_carmera"/>
    <RelativeLayout
            android:id="@+id/more_edit_complete_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#366ce2"
            android:visibility="gone">
        <TextView
                android:id="@+id/more_edit_act_complete_btn_text"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
        />
    </RelativeLayout>

</RelativeLayout>