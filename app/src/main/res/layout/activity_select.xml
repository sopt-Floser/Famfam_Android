<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SelectActivity"
        android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/select_act_create_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#a0d0ff">
        <TextView
                android:id="@+id/text1"
                android:layout_marginTop="85dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족의 공간을 만들어보세요."
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#ffffff"/>
        <TextView
                android:layout_marginTop="24dp"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생성"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#ffffff"/>
        <ImageView
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_host"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/select_act_join_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
                android:id="@+id/text2"
                android:layout_marginTop="85dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초대를 받으셨나요?"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#366ce2"/>
        <TextView
                android:layout_marginTop="24dp"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참여"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#366ce2"/>
        <ImageView
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_guest"/>
    </RelativeLayout>

</LinearLayout>