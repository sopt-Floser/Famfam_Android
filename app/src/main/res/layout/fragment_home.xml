<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/home_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="32dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo"/>
            <RelativeLayout
                    android:layout_below="@+id/home_logo"
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="우리가족"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:id="@+id/invite_btn"
                        android:layout_width="90dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="40dp"
                >
                    <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="초대하기"
                            android:textStyle="bold"
                            android:textColor="#707070"
                            android:textSize="13sp"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:layout_alignLeft="@+id/layout_1"
                    android:layout_below="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/iv_home_famliy_my"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/kim_fam_big"/>
                <TextView
                        android:id="@+id/tv_home_user_name"
                        android:layout_marginLeft="17dp"
                        android:layout_below="@+id/iv_home_famliy_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="김팸팸"/>

                <android.support.v7.widget.RecyclerView
                        android:layout_marginLeft="24dp"
                        android:id="@+id/rv_home_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/iv_home_famliy_my"
                        android:layout_toRightOf="@id/iv_home_famliy_my"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </RelativeLayout>


        <android.support.v4.view.ViewPager
                android:layout_marginTop="32dp"
                android:id="@+id/vp_home_main_content"
                android:layout_width="match_parent"
                android:layout_height="337dp" android:padding="80dp"></android.support.v4.view.ViewPager>
    </LinearLayout>

</RelativeLayout>