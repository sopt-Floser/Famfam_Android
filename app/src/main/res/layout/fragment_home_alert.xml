<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/home_alarm"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp">
    <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_home_basic">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A6707070"
            android:orientation="vertical">
        <TextView
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/history_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calender_white"/>
            <TextView
                    android:id="@+id/history_text1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="아삐님이 7:00시에 귀가합니다."
                    android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/history_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calender_white"/>
            <TextView
                    android:id="@+id/history_text2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="아삐님이 7:00시에 귀가합니다."
                    android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/history_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_calender_white"/>
            <TextView
                    android:id="@+id/history_text3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="아삐님이 7:00시에 귀가합니다."
                    android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
