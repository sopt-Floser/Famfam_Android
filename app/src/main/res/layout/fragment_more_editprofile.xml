<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_more_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/feed_1" />

    <LinearLayout
        android:layout_below="@+id/iv_more_bg"
        android:layout_marginTop="-16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="32dp">
                <TextView
                    android:layout_marginTop="32dp"
                    android:id="@+id/tv_more_editprofile_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김팸팸"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_below="@+id/tv_more_editprofile_nickname"
                    android:id="@+id/tv_more_editprofile_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요 김팸팸 이다"/>
                <TextView
                    android:layout_alignTop="@+id/tv_more_editprofile_nickname"
                    android:layout_alignParentRight="true"
                    android:text="편집"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/tv_more_editprofile_birth_icon"
                    android:layout_marginTop="32dp"
                    android:layout_below="@+id/tv_more_editprofile_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_birtday"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_more_editprofile_birth_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/tv_more_editprofile_birth_icon"
                    android:text="생일"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_more_editprofile_birth_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_more_editprofile_birth_icon"
                    android:layout_alignParentRight="true"
                    android:text="수정"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_more_editprofile_birth_icon"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/tv_more_editprofile_birth_edit"
                    android:text="1995.11.28"
                    android:textSize="16sp"
                    android:textStyle="bold" />



                <ImageView
                    android:id="@+id/tv_more_editprofile_gender_icon"
                    android:layout_marginTop="32dp"
                    android:layout_below="@+id/tv_more_editprofile_birth_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_birtday"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_more_editprofile_gender_icon"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/tv_more_editprofile_gender_icon"
                    android:text="성별"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_more_editprofile_gender_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_more_editprofile_gender_icon"
                    android:layout_alignParentRight="true"
                    android:text="수정"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_more_editprofile_gender_icon"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/tv_more_editprofile_gender_edit"
                    android:text="성별"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_more_profile_img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/iv_more_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/kim_fam_big"
        android:translationY="1dp"/>
    <ImageView
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/iv_more_profile_img"
        android:layout_alignEnd="@+id/iv_more_profile_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle"
        android:src="@drawable/icon_carmera"/>
</RelativeLayout>