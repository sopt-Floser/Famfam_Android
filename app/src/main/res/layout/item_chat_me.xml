<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginTop="2dp"
    android:gravity="right">

    <TextView
        android:id="@+id/tv_chat_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_chat_profile"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/tv_chat_me_time"
        android:background="@drawable/chatbox_blue"
        android:padding="8dp"
        android:text="asdasdasdasd"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_chat_me_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_chat_me"
        android:layout_marginRight="4dp"
        android:text="오전 2:38" />
</RelativeLayout>